<div class="row">
    <div class="col-md-7">
      <img src="{{item.imgLink}}" class="img-responsive" alt="">
    </div>
    <div class="col-md-5">
        <h3>{{item.name}}</h3>
        <p>{{item.description}}</p>
    </div>
    <table>
      <thead>
        <tr>
          <td>Name</td>
          <td>Quantity</td>
        </tr>
      </thead>
      {{#each item.ingredients as |ingredient|}}
        <tr>
          <td>{{ingredient.name}}</td>
          <td>{{ingredient.quantity}}</td>
        </tr>
      {{/each}}
    </ul>
    <div class="panel-footer text-right">
      {{yield}}
    </div>
</div>
