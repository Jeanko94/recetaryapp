<div class="row">
    <div class="col-md-7">
      <img src="{{item.imgLink}}" class="img-responsive" alt="">
    </div>
    <div class="col-md-5">
        <h3>Name: {{item.name}}</h3>
        <p>Description: {{item.description}}</p>
        <p>Category: {{item.category.name}}</p>
        <p>Ingredients: {{#each item.ingredients as |ingredient|}}<br/>{{ingredient.displayName}}{{/each}}</p>
    </div>
    <div class="panel-footer text-right">
      {{yield}}
    </div>
</div>
