<div class="form-horizontal">
    <div class="form-group has-feedback {{if item.isValid 'has-success'}}">
        <label class="col-sm-2 control-label" style="color:white">Name*</label>
        <div class="col-sm-10">
          {{input type="text" value=recepy.name class="form-control" placeholder="Name of the Recipe"}}
          {{#if recepy.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Description</label>
        <div class="col-sm-10">
          {{input type="text" value=recepy.description class="form-control" placeholder="Description of the Recipe"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Image Link</label>
        <div class="col-sm-10">
          {{input type="text" value=recepy.imgLink class="form-control" placeholder="Recipe Image Link"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Category</label>
        <div class="col-sm-10">
          <select class="form-control" onchange={{action (mut selectedCategory) value="target.value"}}>
            <option value="">
            </option>
            {{#each categories as |category|}}
              <option value={{category.id}} selected={{eq recepy.category.id category.id}}>
                {{category.name}}
              </option>
            {{/each}}
          </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Ingredients</label>
        <div class="col-sm-10">
          {{select-2
              content=ingredients
              optionDescriptionPath="displayName"
              value=selectedIngredients
              multiple=true
              placeholder="Choose the ingredients"
          }}
        </div>
    </div>

    <div class="form-group" >
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' recepy selectedCategory}} disabled="{{unless recepy.isValid 'disabled'}}">{{buttonLabel}}</button>
        </div>
    </div>
</div>
