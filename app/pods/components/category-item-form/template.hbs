<div class="form-horizontal">
    <div class="form-group has-feedback {{if item.isValid 'has-success'}}">
        <label class="col-sm-2 control-label" style="color:white">Name*</label>
        <div class="col-sm-10">
          {{input type="text" value=item.name class="form-control" placeholder="Name of the Category"}}
          {{#if item.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Description</label>
        <div class="col-sm-10">
          {{input type="text" value=item.description class="form-control" placeholder="Description of the Category"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" style="color:white">Image Link</label>
        <div class="col-sm-10">
          {{input type="text" value=item.imgLink class="form-control" placeholder="Category Image Link"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled="{{unless item.isValid 'disabled'}}">{{buttonLabel}}</button>
        </div>
    </div>
</div>
