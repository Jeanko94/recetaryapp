<div class="container" style="background-color:white">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categories
                    <small>Here are the recepies categories</small>
                </h1>
            </div>
        </div>

        {{#each model as |category|}}
          {{#category-item item=category}}
              {{#link-to 'categories.edit' category.id class="btn btn-success btn-xs"}}Edit{{/link-to}}
              <button class="btn btn-danger btn-xs" {{action 'deleteCategory' category}}>Delete</button>
          {{/category-item}}
        {{/each}}
</div>
